    <!-- note that will tell a browser we are at root-->

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <!-- General properties -->
    <meta name="description" content="We're an independent, online news magazine from B.C. We're devoted to fact-driven reporting and analysis to inform and enliven our democratic conversation." />
    <meta name="author" content="The Tyee">
    <meta name="keywords" content="Canada, national, news, media concentration, fact-driven reporting">
    <meta name="robots" content="index, follow" />
    <meta name="revisit-after" content="1 days" />
    <meta name="copyright" content="The Tyee 2016" />
    <meta name="MSSmartTagsPreventParsing" content="TRUE" />

    <!-- OpenGraph properties -->
    <meta property="og:title" content="Support strong, independent journalism. Join me " />
    <meta property="og:description" content="Our democracy needs good journalism. Join me in supporting fact-based, independent journalism." />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://support.thetyee.ca" />
    <meta property="og:image" content="<%= $config->{'static_asset_path'} %>/ui/img/fb-share-collage.jpg" />
    <meta name="twitter:site" content="@thetyee" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:image:src" content="<%= $config->{'static_asset_path'} %>/ui/img/fb-share-collage.jpg" />

    <meta property="og:site_name" content="The Tyee" />
    <meta property="fb:admins" content="648146258, 512340590, 121503155, 13609677, 877285452, 584785109" />

    <!-- Dublin Core properties -->
    <link rel="schema.DC" href="http://purl.org/dc/elements/1.1/" />
    <link rel="schema.DCTERMS" href="http://purl.org/dc/terms/" />
    <meta name="DC.title" lang="English" content="" />
    <meta name="DC.creator" content="The Tyee" />
    <meta name="DC.description" lang="English" content="We're an independent, online news magazine from B.C. We're devoted to fact-driven reporting and analysis to inform and enliven our democratic conversation." />
    <meta name="DC.publisher" content="The Tyee" />
    <meta name="DC.format" content="text/html" />
    <meta name="DC.language" scheme="DCTERMS.URI" content="English" />

    <title><%= $title %></title>
    <!-- Place favicon.ico and apple-touch-icon.png in the root directory -->
    <link href="<%= $config->{'static_asset_path'} %>/ui/css/styles.css?v=4" rel="stylesheet" media="screen">

    <script src="<%= $config->{'static_asset_path'} %>/ui/js/modernizr.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <script src="<%= $config->{'static_asset_path'} %>/ui/js/jquery.validate.min.js"></script>
    <script type="text/javascript" src="//use.typekit.net/sjz2xsw.js"></script>
    <script type="text/javascript">try{Typekit.load();}catch(e){}</script>

    <!-- Recurly.js for PayPal (card is Stripe) -->
    <script src="https://js.recurly.com/v4/recurly.js"></script>
    <script>
      if (window.recurly) {
        recurly.configure({
          publicKey: '<%= $config->{pkey} %>'
        });

        // Optional: global error hook for extra noise
        recurly.on('error', function (err) {
          console.error('Recurly global error:', err);
        });
      } else {
        console.error('Recurly.js failed to load');
      }
    </script>


    <!-- Stripe.js v3 -->
    <script src="https://js.stripe.com/v3/"></script>

    <!-- Make publishable key available to our form JS -->
    <script>
      window.STRIPE_PUBLISHABLE_KEY = "<%= $config->{'stripe_publishable_key'} %>";
    </script>

    <link rel="shortcut icon" href="https://thetyee.ca/design-article.thetyee.ca/ui/img/favicon_new.ico">
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-0W29ZX6R12"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-0W29ZX6R12', { 'debug_mode':true });
    </script>

 <!-- Matomo -->
 <script>
  var _paq = window._paq = window._paq || [];
  /* tracker methods like "setCustomDimension" should be called before "trackPageView" */
  _paq.push(['trackPageView']);
  _paq.push(['enableLinkTracking']);
  (function() {
   var u="//matomo.thetyee.ca/";
   _paq.push(['setTrackerUrl', u+'matomo.php']);
   _paq.push(['setSiteId', '2']);
   var d=document, g=d.createElement('script'), s=d.getElementsByTagName('script')[0];
   g.async=true; g.src=u+'matomo.js'; s.parentNode.insertBefore(g,s);
  })();
 </script>
